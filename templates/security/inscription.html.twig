{% extends 'base_accueil.html.twig' %}

{% form_theme form _self %}

{% block stylesheets %}

    <style>
        #rc-imageselect, .g-recaptcha {transform:scale(1.05);-webkit-transform:scale(1.05);transform-origin:0 0;-webkit-transform-origin:0 0;}
    </style>

{% endblock %}
{% block body %}
    <div class="conteneur2">

    <section class="sectionIns">
        <section class="codivIns">
            <section class="inscription">
                <h1>Inscription</h1>

                {{ form_start(form) }}
                {{ form_label(form.nom) }}
                {{ form_errors(form.nom) }}
                {{ form_widget(form.nom) }}
                {{ form_label(form.prenom) }}
                {{ form_errors(form.prenom) }}
                {{ form_widget(form.prenom) }}
                {{ form_row(form.email, {'label' : 'Adresse email'}) }}
                {{ form_row(form.pseudo, {'label' : 'Pseudonyme'}) }}
                {{ form_row(form.password, {'label' : 'Mot de passe'}) }}
                {{ form_row(form.recaptcha, {'label' : false}) }}
                <button type="submit" class="btn btn-success" formnovalidate>Inscription</button>
                {{ form_end(form) }}

                <div class="languelien">
                    <select name="langue" class="langue">
                        <option value="fr">FR</option>
                        <option value="en">EN</option>
                    </select>
                    <a href="{{ path('main_accueil') }}">Retour</a>
                </div>
            </section>
        </section>


    </section>
{% endblock body %}