{% extends 'admin.html.twig' %}

{% block title %}Partie {{ partie.id }}{% endblock %}

{% block body %}
    <div class="jumbotron" style="margin-bottom: 0">
        <div class="d-flex justify-content-between align-items-center">
            <p><a href="{{ path('partie_index') }}"><button class="btn btn-primary">Retourner à la liste</button></a></p>

            <p><a href="{{ path('partie_edit', {'id': partie.id}) }}"><button class="btn btn-success">Modifier la partie</button></a></p>

            {{ include('partie/_delete_form.html.twig') }}
        </div>
        <ul class="list-group">
            <li class="list-group-item list-group-item-action active d-flex justify-content-between align-items-center">
                Partie n° {{ partie.id }}
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Joueur 1
                <span class="">{{ partie.joueur1.pseudo}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Joueur 2
                <span class="">{{ partie.joueur2.pseudo}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Creation de la partie
                <span class="">{{ partie.creationLe ? partie.creationLe|date('Y-m-d H:i:s') : '' }}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Fin de la partie
                <span class="">{{ partie.finieLe ? partie.finieLe|date('Y-m-d H:i:s') : '' }}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Tour du joueur
                <span class="">{{ partie.tour }}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Type de victoire
                <span class="">{{ partie.typeVictoire }}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Gagnant de la partie
                <span class="">{% if partie.gagnant %}{{ partie.gagnant.pseudo }}{% endif %}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Perdant de la partie
                <span class="">{% if partie.perdant %}{{ partie.perdant.pseudo }}{% endif %}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Durée de la partie
                <span class="">{{ partie.duree }}</span>
            </li>
        </ul>
    </div>
{% endblock %}
